generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  CUSTOMER
  AFFILIATE
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  phoneNumber   String @unique
  role          UserRole @default(CUSTOMER)

  company     Company? @relation("CompanyUsers", fields: [companyId], references: [id])
  companyId   Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([companyId])
  @@index([role])
}

model Company {
  id            Int       @id @default(autoincrement())
  name          String
  taxId         String?
  address       String?
  phoneNumber   String?

  users       User[]   @relation("CompanyUsers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)
}

model PhoneOtp {
  id          Int      @id @default(autoincrement())
  phoneNumber String @unique
  otp         String   // "483920"
  expiresAt   DateTime

  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([phoneNumber])
  @@index([expiresAt])
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  logoUrl   String?

  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique

  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)
}

model Product {
  id               Int      @id @default(autoincrement())
  name             String
  slug             String   @unique
  sku              String   @unique

  description      String?
  shortDescription String?

  price            Int?
  stock            Int      @default(0)
  isActive         Boolean  @default(true)

  affiliatePercent Decimal? @db.Decimal(5, 2)    // ‚Üê 99.99% max, 2 decimal places
  isPreOrder       Boolean  @default(false)
  preOrderStart    DateTime?
  preOrderEnd      DateTime?

  brandId          Int
  brand            Brand    @relation(fields: [brandId], references: [id])

  categoryId       Int
  category         Category @relation(fields: [categoryId], references: [id])

  images           ProductImage[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([brandId])
  @@index([categoryId])
  @@index([isActive])
  @@index([sku])
  @@index([price])
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  productId Int
  url       String
  alt       String?
  sortOrder Int      @default(0)

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([productId])
  @@index([productId, sortOrder])
}