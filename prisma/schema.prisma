generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  CUSTOMER
  AFFILIATE
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  phoneNumber   String @unique
  governmentId  String?
  address       String?
  role          UserRole @default(CUSTOMER)
  
  // Referral System
  referralCode  String @unique
  referrerId    Int?   // ID of the user who referred this user
  referrer      User?  @relation("UserReferrals", fields: [referrerId], references: [id])
  referredUsers User[] @relation("UserReferrals")
  
  // Rewards & Discounts
  maxReferralPercentage Decimal @default(2.5) @db.Decimal(5, 2) // Max commission they can earn
  globalDiscountPercentage Decimal @default(0) @db.Decimal(5, 2) // Personal discount on purchases

  company     Company? @relation("CompanyUsers", fields: [companyId], references: [id])
  companyId   Int?
  
  statistics  UserStatistics?
  missions    UserMission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([companyId])
  @@index([role])
  @@index([referralCode])
  @@index([referrerId])
}

model Company {
  id            Int       @id @default(autoincrement())
  name          String
  taxId         String?
  address       String?
  phoneNumber   String?

  users       User[]   @relation("CompanyUsers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)
}

model PhoneOtp {
  id          Int      @id @default(autoincrement())
  phoneNumber String @unique
  otp         String   // "483920"
  expiresAt   DateTime

  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([phoneNumber])
  @@index([expiresAt])
}

model UserStatistics {
  id                    Int      @id @default(autoincrement())
  userId                Int      @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  totalOrders           Int      @default(0)
  totalSpent            Decimal  @default(0) @db.Decimal(12, 2)
  totalReferrals        Int      @default(0)
  totalReferralEarnings Decimal  @default(0) @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([userId])
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  logoUrl   String?

  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  sortOrder Int      @default(0)

  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)
  
  @@index([sortOrder])
}

model Product {
  id               Int      @id @default(autoincrement())
  name             String
  slug             String   @unique
  sku              String   @unique

  description       String?
  shortDescription  String?
  dataSheetUrl      String?

  price             Int?
  discount          Decimal? @db.Decimal(5, 2)

  stock            Int      @default(0)
  isActive         Boolean  @default(true)
  sortOrder        Int      @default(0)

  affiliatePercent Decimal? @db.Decimal(5, 2)    // ‚Üê 99.99% max, 2 decimal places
  isPreOrder       Boolean  @default(false)

  preOrderReadyEarliest    Int? // Weeks
  preOrderReadyLatest      Int? // Weeks

  brandId          Int
  brand            Brand    @relation(fields: [brandId], references: [id])

  categoryId       Int
  category         Category @relation(fields: [categoryId], references: [id])

  images           ProductImage[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([brandId])
  @@index([categoryId])
  @@index([isActive])
  @@index([sku])
  @@index([price])
  @@index([sortOrder])
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  productId Int
  url       String
  alt       String?
  sortOrder Int      @default(0)

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)

  @@index([productId])
  @@index([productId, sortOrder])
}

enum MissionType {
  ORDER_COUNT
  ORDER_VALUE
  REFERRAL_COUNT
  REFERRAL_EARNINGS
}

enum RewardType {
  REFERRAL_PERCENTAGE
  GLOBAL_DISCOUNT
  BOTH
}

model Mission {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  icon          String   // Emoji or icon identifier
  
  type          MissionType
  targetValue   Decimal  @db.Decimal(12, 2) // Target to reach (count or amount)
  
  rewardType    RewardType
  rewardValue   Decimal  @db.Decimal(5, 2) // Percentage increase (e.g., 2.5 for 2.5%)
  
  sortOrder     Int      @default(0)
  isActive      Boolean  @default(true)
  
  userMissions  UserMission[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)
  
  @@index([type])
  @@index([isActive])
  @@index([sortOrder])
}

model UserMission {
  userId        Int
  missionId     Int
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  mission       Mission   @relation(fields: [missionId], references: [id], onDelete: Cascade)

  currentProgress Decimal @default(0) @db.Decimal(12, 2)
  achieved        Boolean @default(false)
  achievedAt      DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enabled Boolean @default(true)

  @@unique([userId, missionId])
}